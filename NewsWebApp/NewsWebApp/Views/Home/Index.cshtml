@model HomeDataModel

@{
    ViewData["Title"] = "The News Paper";
    Random random = new Random();
}

<div class="featured-post-area">
    <div class="container">
        <div class="row">
            <div class="col-12" style="padding: 0">
                <div class="row">

                    <!-- Single Featured Post -->
                    <div class="col-12 col-lg-7">
                        <div class="single-blog-post featured-post">
                            <div class="post-thumb">
                                <a href="@Url.Action("Detail", "Post", new { postId = Model.lst3Newest[0].Id })"><img src="img/bg-img/@Model.lst3Newest[0].ImageUrl" alt=""></a>
                            </div>
                            <div class="post-data">
                                <a href="@Url.Action("Catagory", "Post", new { typeId = Model.lst3Newest[0].CatagoryId})" class="post-catagory">@Model.lst3Newest[0].Catagory.Name</a>
                                <a href="@Url.Action("Detail", "Post", new { postId = Model.lst3Newest[0].Id })" class="post-title">
                                    <h6>@Model.lst3Newest[0].Title</h6>
                                </a>
                                <div class="post-meta">
                                    <p class="post-author">By <a href="#">@Model.lst3Newest[0].Author.FullName</a></p>
                                    <p class="post-excerp">@Model.lst3Newest[0].Content.Substring(0, 300) ...</p>
                                    <!-- Post Like & Post Comment -->
                                    <div class="d-flex align-items-center">
                                        <a href="" class="post-like"><img src="img/core-img/like.png" alt=""> <span>@random.Next(1000)</span></a>
                                        <a href="" class="post-comment"><img src="img/core-img/chat.png" alt=""> <span>@random.Next(100)</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-5">
                        <!-- Single Featured Post -->
                        <div class="single-blog-post featured-post-2">
                            <div class="post-thumb">
                                <a href="@Url.Action("Detail", "Post", new { postId = Model.lst3Newest[1].Id })"><img src="img/bg-img/@Model.lst3Newest[1].ImageUrl" alt=""></a>
                            </div>
                            <div class="post-data">
                                <a href="@Url.Action("Catagory", "Post", new { typeId = Model.lst3Newest[1].CatagoryId})" class="post-catagory">@Model.lst3Newest[1].Catagory.Name</a>
                                <div class="post-meta">
                                    <a href="@Url.Action("Detail", "Post", new { postId = Model.lst3Newest[1].Id })" class="post-title">
                                        <h6>@Model.lst3Newest[1].Title</h6>
                                    </a>
                                    <!-- Post Like & Post Comment -->
                                    <div class="d-flex align-items-center">
                                        <a href="" class="post-like"><img src="img/core-img/like.png" alt=""> <span>@random.Next(1000)</span></a>
                                        <a href="" class="post-comment"><img src="img/core-img/chat.png" alt=""> <span>@random.Next(100)</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Single Featured Post -->
                        <div class="single-blog-post featured-post-2">
                            <div class="post-thumb">
                                <a href="@Url.Action("Detail", "Post", new { postId = Model.lst3Newest[2].Id })"><img src="img/bg-img/@Model.lst3Newest[2].ImageUrl" alt=""></a>
                            </div>
                            <div class="post-data">
                                <a href="@Url.Action("Catagory", "Post", new { typeId = Model.lst3Newest[2].CatagoryId})" class="post-catagory">@Model.lst3Newest[2].Catagory.Name</a>
                                <div class="post-meta">
                                    <a href="@Url.Action("Detail", "Post", new { postId = Model.lst3Newest[2].Id })" class="post-title">
                                        <h6>@Model.lst3Newest[2].Title</h6>
                                    </a>
                                    <!-- Post Like & Post Comment -->
                                    <div class="d-flex align-items-center">
                                        <a href="#" class="post-like"><img src="img/core-img/like.png" alt=""> <span>@random.Next(1000)</span></a>
                                        <a href="#" class="post-comment"><img src="img/core-img/chat.png" alt=""> <span>@random.Next(100)</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Featured Post Area End ##### -->
<!-- ##### Popular News Area Start ##### -->
<div class="popular-news-area section-padding-80-50">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading">
                    <h6>Popular News</h6>
                </div>

                <div class="row">
                    @{
                        foreach (var item in Model.lst4PopularNews)
                        {
                            <!-- Single Post -->
                            <div class="col-12 col-md-6">
                                <div class="single-blog-post style-3">
                                    <div class="post-thumb">
                                        <a href="@Url.Action("Catagory", "Post", new { typeId = item.CatagoryId})"><img src="img/bg-img/@item.ImageUrl" alt=""></a>
                                    </div>
                                    <div class="post-data">
                                        <a href="@Url.Action("Catagory", "Post", new { typeId = item.CatagoryId})" class="post-catagory">@item.Catagory.Name</a>
                                        <a href="@Url.Action("Detail", "Post", new { postId = item.Id })" class="post-title">
                                            <h6>@item.Title</h6>
                                        </a>
                                        <div class="post-meta d-flex align-items-center">
                                            <a href="" class="post-like"><img src="img/core-img/like.png" alt=""> <span>@random.Next(1000)</span></a>
                                            <a href="" class="post-comment"><img src="img/core-img/chat.png" alt=""> <span>@random.Next(100)</span></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Popular News Area End ##### -->

